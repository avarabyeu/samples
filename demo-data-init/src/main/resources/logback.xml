<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%-4relative [%thread] %-5level %logger{35} - %msg %n</pattern>
        </encoder>
    </appender>

    <logger name="com.github.avarabyeu.samples.dao" level="TRACE" additivity="false">
        <appender-ref ref="STDOUT" />
    </logger>


    <root level="WARN">
        <appender-ref ref="STDOUT" />
    </root>
</configuration>
